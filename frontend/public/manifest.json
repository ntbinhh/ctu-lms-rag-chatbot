    }
  ],
  "shortcuts": [
    {
      "name": "Lịch học",
      "short_name": "Lịch học",
      "description": "Xem lịch học hàng ngày",
      "url": "/schedule",
      "icons": [
        {
          "src": "/icons/calendar-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Điểm số",
      "short_name": "Điểm số",
      "description": "Xem điểm số và kết quả học tập",
      "url": "/grades",
      "icons": [
        {
          "src": "/icons/grades-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Thông báo",
      "short_name": "Thông báo",
      "description": "Xem thông báo mới nhất",
      "url": "/notifications",
      "icons": [
        {
          "src": "/icons/notifications-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Tin tức",
      "short_name": "Tin tức",
      "description": "Đọc tin tức và thông tin mới nhất",
      "url": "/news",
      "icons": [
        {
          "src": "/icons/news-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://ctu-lms.edu.vn"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+ctulms",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/pdf": [".pdf"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": [
            "image/*",
            "application/pdf",
            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
          ]
        }
      ]
    }
  },
  "permissions": [
    "notifications",
    "background-sync",
    "persistent-storage"
  ],
  "features": [
    "cross-origin-isolated"
  ]
}
